<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/cloth"
    tools:context=".LanguageChoice">

    <TextView
        android:id="@+id/pleaseChooseLang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/language_choose"
        android:textAlignment="center"
        android:textColor="@color/gold_text"
        android:textSize="32sp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="200dp"/>

    <ImageView
        android:id="@+id/langEn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="300dp"
        android:layout_marginBottom="330dp"
        android:contentDescription="@string/todo"
        app:srcCompat="@drawable/en" />

    <ImageView
        android:id="@+id/langPol"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="150dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="330dp"
        android:layout_toEndOf="@+id/langEn"
        android:contentDescription="@string/todo"
        app:srcCompat="@drawable/pl" />

</RelativeLayout>