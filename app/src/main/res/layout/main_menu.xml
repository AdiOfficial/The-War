<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/cloth"
    tools:context=".MainMenuActivity"
    tools:ignore="Overdraw">

    <ImageView
        android:id="@+id/playingCards"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="288dp"
        android:layout_marginTop="25dp"
        app:srcCompat="@drawable/playingcards"
        android:contentDescription="@string/todo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="85dp"
        android:layout_marginTop="45dp"
        android:text="@string/game_title"
        android:textColor="@color/gold_text"
        android:textSize="32sp" />

    <Button
        android:id="@+id/startGameButton"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="119dp"
        android:layout_marginTop="107dp"
        android:layout_marginEnd="119dp"
        android:background="@drawable/buttonshape"
        android:text="@string/start_game"
        android:textColor="@color/gold_text" />

    <Button
        android:id="@+id/helpButton"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:layout_below="@+id/startGameButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="119dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="119dp"
        android:background="@drawable/buttonshape"
        android:text="@string/help"
        android:textColor="@color/gold_text" />

    <Button
        android:id="@+id/creditsButton"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:layout_below="@+id/helpButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="119dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="119dp"
        android:background="@drawable/buttonshape"
        android:text="@string/credits"
        android:textColor="@color/gold_text" />

    <Button
        android:id="@+id/quitButton"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:layout_below="@+id/creditsButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="119dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="119dp"
        android:background="@drawable/buttonshape"
        android:text="@string/quit"
        android:textColor="@color/gold_text" />

</RelativeLayout>