<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/cloth"
    tools:context=".LanguageChoice"
    tools:ignore="Overdraw">

    <TextView
        android:id="@+id/pleaseChooseLang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/language_choose"
        android:textFontWeight="400"
        android:textAlignment="center"
        android:textColor="@color/gold_text"
        android:textSize="32sp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="100dp"/>

    <ImageView
        android:id="@+id/langEn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="180dp"
        android:layout_marginTop="200dp"
        app:srcCompat="@drawable/en"
        android:contentDescription="@string/todo" />

    <ImageView
        android:id="@+id/langPol"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="420dp"
        android:layout_marginTop="200dp"
        app:srcCompat="@drawable/pl"
        android:contentDescription="TODO"
        tools:ignore="ContentDescription,HardcodedText" />

</RelativeLayout>